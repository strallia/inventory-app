<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>Items</title>
  </head>
  <body>
    <%- include("partials/navigation") %>
    <main>
      <h1>All Items</h1>
      <div class="content">
        <% items.forEach((item) => { %>
          <div class="card">
            <h3><%= item.item_title %></h3>
            <p>category: <%= item.category_title %></p>
            <div class="buttons-container">
              <form action=<%= `/items/${item.item_id}/update` %> method="GET">
                <button type="submit">Update</button>
              </form>
              <form action=<%= `/items/${item.item_id}?_method=DELETE` %> method="POST">
                <button type="submit">Delete</button>
              </form>
            </div>
          </div>
        <% }); %>
      </div>
      <form action="/items/new" method="GET">
        <button type="submit" >Add new item</button>
      </form>
    </main>
  </body>
</html>
