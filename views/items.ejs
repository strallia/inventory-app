<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Items</title>
  </head>
  <body>
    <%- include("partials/navigation") %>
    <main>
      <h1>All Items</h1>
      <% items.forEach((item) => { %>
      <div>
        <h3><%= item.title %></h3>
        <p>category ID: <%= item.category_id %></p>
        <form action=<%= `/items/${item.item_id}/update` %> method="GET">
          <button type="submit">Update</button>
        </form>
        <form action=<%= `/items/${item.item_id}?_method=DELETE` %> method="POST">
          <button type="submit">Delete</button>
        </form>
      </div>
      <% }); %>
      <form action="/items/new" method="GET">
        <button type="submit" >Add new item</button>
      </form>
    </main>
  </body>
</html>
