<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Categories</title>
  </head>
  <body>
    <%- include("partials/navigation") %>
    <main>
      <h1>All Categories</h1>
      <% categories.forEach((category) => { %>
      <div>
        <h3><%= category.name %></h3>
        <form action=<%= `/categories/${category.id}/update` %> method="GET">
          <button type="submit">Update</button>
        </form>
        <form action=<%= `/categories/${category.id}?_method=DELETE` %> method="POST">
          <button type="submit">Delete</button>
        </form>
        <form action=<%= `/categories/${category.id}` %> method="GET">
          <button type="submit" >Show Items</button>
        </form>
      </div>
      <% }); %>
      <form action="/categories/new" method="GET">
        <button type="submit" >Add new category</button>
      </form>
    </main>
  </body>
</html>
